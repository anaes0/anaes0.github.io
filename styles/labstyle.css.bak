#menu {
width: 100%; 
float: leftwards; 
margin: 0 0 0 0; 
padding-top: 10px;
padding-right: 30px;
padding-bottom: 10px;
padding-left: 35%;
list-style: none; 
border-bottom: 1px solid white;
border-top: 1px solid white;
}
#menu li {
float: left; 
} 
#menu li a {
display: block; 
padding: 8px 15px; 
text-decoration: none; 
font-weight: bold;
font-size:smaller;
color: #50595c;
border-right: 1px solid #ccc;
} 
#menu li a:hover {
color: #c06c84;
background-color: #fff;
}

.my-details{
	color:#e99b9b;
	font-weight:normal;
}
.intro{
	color:#50595c;
	font-size:smaller;
	text-align:justify;
	margin:0 auto;
	width:30em;
		
}
.introBold {
	font-weight:bold;
}
.center-list{
	text-align:center;
	width:60%;
	margin:0 auto;
}
.center-list ul,
.center-list ol {
	position:relative;
	color:#50595c;
	text-align:left;
	display:inline-block;
	font-family:Poppins,sans-serif;
}
.header{
	color:#c06c84;
	text-shadow:2px 2px 3px #e99b9b;	
}
.employer{	
	font-weight:bolder;
}
.container-1{
	display:flex;
	align-items:flex-start;
	width:60%;
	margin: 0 auto;
	
}
.container-1 div{
	color:#50595c;
	border:2px #c06c84 solid;
	padding:10px;
}
.box1{
	flex:1;
}
.box2{
	flex:2;
}
.box3{
	flex:1;
}
.flex-container {
	display:flex;
	background-color: pink;
	flex-direction:row;
}
.flex-container div{
	background-color: black;
	margin:5px;
	color: white;
	width:60%;
}

@media (min-width: 1000px) {
	.flex-container div{
	background-color: #c06c84;
}

}

